generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int        @id @default(autoincrement())
  clerkId   String     @unique
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  exercises Exercise[]
}

model Level {
  id                 Int                 @id @default(autoincrement())
  level              Int                 @unique
  Intervals          Interval[]
  Chords             Chord[]
  Chord_Progressions Chord_Progression[]
}

model Exercise {
  id     Int          @id
  type   ExerciseType
  User   User?        @relation(fields: [userId], references: [id])
  userId Int?
}

model Interval {
  id        Int     @id @default(autoincrement())
  name      String
  halfsteps Int
  format    String
  Levels    Level[]
}

model Chord {
  id     Int     @id @default(autoincrement())
  name   String
  type   String
  Levels Level[]
}

model Chord_Progression {
  id          Int     @id @default(autoincrement())
  name        String
  progression String
  Levels      Level[]
}

enum ExerciseType {
  INTERVAL
  CHORD
  CHORD_PROGRESSION
  CLAPBACK_PLAYBACK
}
